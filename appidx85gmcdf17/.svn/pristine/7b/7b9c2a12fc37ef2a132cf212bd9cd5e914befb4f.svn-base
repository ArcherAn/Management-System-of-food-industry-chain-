<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>仓储设备信息表</title></block>
<block name="content">
<script>
document.getElementById('cangchu').click();
</script>
    <script>
        function jump(){
            window.location="__APP__/Warehouse/Equip/add";
        }
        </script>
        <div>
            <div style="height: 50px">
                <span style="margin-top: 5px;font-size: 28px">阅读器管理</span><span style="font-size: 14px;margin-top: 3px;">&nbsp;仓储管理平台</span>
            </div>
            <div style="background-color: #b1bab7;height: 30px">
                <span style="margin-top: 5px;float: left">主页&nbsp;>&nbsp;仓储&nbsp;>&nbsp;设备管理</span>
            </div>
            <div  style="margin-top: 10px;">
                <form action="__APP__/Plant/Equip/index" method="get">
                    <span style="font-size: 16px;float: left">机器类型：</span>
                    <span style="float: left;margin-left: 10px"><input name="type" type="text" placeholder="请输入要搜索的类型" class="form-control"style="width: 200px;height: 30px"></span>
                    <span><button type="submit" class="btn btn-primary btn-sm" style="float: left;margin-left: 10px;">查询</button></span>
                    <span><button type="button" class="btn btn-success btn-sm" style="float: left;margin-left: 10px" onclick="jump()">添加</button></span>
                </form>
            </div>
            <div>
                <table  class="table table-striped table-bordered" style="margin-top: 50px;align:center;">
                    <thead>
                    <tr>
                        <th>机器编号</th>
                        <th>类型</th>
                        <th>型号</th>
                        <th>品牌</th>
                        <th>价格</th>
                        <th>购买日期</th>
                        <th>所属</th>
                        <th>效率</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <volist name='data' id='vo'>
                        <tr>
                            <td><{$vo.machineid}></td>
                            <td><{$vo.type}></td>
                            <td><{$vo.model}></td>
                            <td><{$vo.brand}></td>
                            <td><{$vo.price}></td>
                            <td><{$vo.purchasedate}></td>
                            <td><{$vo.belongs}></td>
                            <td><{$vo.efficiency}></td>
                            <td><{$vo.status}></td>
                            <td><a href="__APP__/Warehouse/Equip/modify/id/<{$vo.id}>">修改</a>|
                                <a href="__APP__/Warehouse/Equip/delete/id/<{$vo.id}>" onclick="return confirm('是否删除？')">删除</a>
                            </td>
                        </tr>
                    </volist>
                    </tbody>
                </table>
            </div>
            <div align="center"><{$page}></div>
        </div>
    </block>