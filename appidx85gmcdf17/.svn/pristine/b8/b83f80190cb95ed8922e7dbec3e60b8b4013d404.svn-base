<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title">
	<title>进料信息添加</title>
</block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>加工进料信息添加</caption>
            	</thead>
            	<tbody>
                    <tr>
                        <td id="atr">进料编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：20080101" type="text" id='feedid' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">品种</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：ZD34" type="text" id='breed' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">类型</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：早稻" type="text" id='type' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">重量</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：35" type="text" id='weight' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">来源</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：一号仓库" type="text" id='source' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">批次号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：一号仓库" type="text" id='picihao' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">操作员</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：张三" type="text" id='operator' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">日期</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：20110101" type="text" id='date' />
                        </td>
                    </tr>
            	</tbody>
            	<tfoot>
	                <tr>
	                	<td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#feedid').val();
	                    var b=$('#breed').val();
	                    var c=$('#type').val();
	                    var d=$('#weight').val();
	                    var e=$('#source').val();
						var f=$('#picihao').val();
	                    var g=$('#operator').val();
	                    var h=$('#date').val();
	                    var url='__APP__/Process/Feed/insert_database';
	                    if(a == ""){
	                        alert("请填写进料编号！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写品种！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写类型！");
	                        return false;}
	                    if(d == "") {
	                        alert("请填写重量！");
	                        return false;}
	                    if(e == "") {
	                        alert("请填写来源！");
	                        return false;}
						if(f == ""){
	                        alert("请填写批次号！");
							 return false;}
	                    if(g == ""){
	                        alert("请填写操作员！");
	                        return false;}
	                    if(h == ""){
	                        alert("请填写日期！");
	                        return false;}
	                    var data={
	                        feedid:a,
	                        breed:b,
	                        type:c,
	                        weight:d,
	                        source:e,
							picihao:f,
	                        operator:g,
	                        date:h,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>