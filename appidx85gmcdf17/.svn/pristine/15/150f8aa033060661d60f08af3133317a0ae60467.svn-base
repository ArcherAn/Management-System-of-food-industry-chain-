<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>糕点配方信息添加（深加工）</title></block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>添加糕点配方信息记录</caption>
            	</thead>
            	<tbody>
	                <tr>
	                    <td id="atr">配方编号</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="recipeid" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">产品名称</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="name" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">成分1</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="ingredients1" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">成分2</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="ingredients2" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">成分3</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="ingredients3" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">成分4</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="ingredients4" type="text"/>
	                    </td>
	                </tr>
            	</tbody>
            	<tfoot>
	      			<tr>
	                    <td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#recipeid').val();
	                    var b=$('#name').val();
	                    var c=$('#ingredients1').val();
	                    var d=$('#ingredients2').val();
	                    var e=$('#ingredients3').val();
	                    var f=$('#ingredients4').val();
	                    var url='__APP__/Deepprocess/Material/insert_database_rec';
	                    if(a == ""){
	                        alert("请填写配方编号！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写产品名称！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写成分1！");
	                        return false;}
	                    if(d == "") {
	                        alert("请填写成分2！");
	                        return false;}
	                    if(e == "") {
	                        alert("请填写成分3！");
	                        return false;}
	                    if(f == ""){
	                        alert("请填写成分4！");
	                        return false;}
	                    var data={
	                    	recipeid:a,
	                    	name:b,
	                    	ingredients1:c,
	                    	ingredients2:d,
	                    	ingredients3:e,
	                    	ingredients4:f,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>