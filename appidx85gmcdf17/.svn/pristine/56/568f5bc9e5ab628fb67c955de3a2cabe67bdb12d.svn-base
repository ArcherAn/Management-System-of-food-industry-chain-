<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>设备信息添加</title></block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>仓库信息添加</caption>
            	</thead>
            	<tbody>
	                <tr>
	                    <td id="atr">仓库编号</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="warehouseid" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">仓库地点</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：荆州" id="site" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">仓库容量</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1000" id="capacity" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">粮食存储量</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：700" id="storage" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">标准/非标准</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：标仓" id="standard" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">日期</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：2015-03-09" id="date" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">仓管员</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：张三" id="admin" type="text"/>
	                    </td>
	                </tr>
            	</tbody>
            	<tfoot>
	      			<tr>
	                    <td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#warehouseid').val();
	                    var b=$('#site').val();
	                    var c=$('#capacity').val();
	                    var d=$('#storage').val();
	                    var e=$('#standard').val();
	                    var f=$('#date').val();
	                    var g=$('#admin').val();
	                    var url='__APP__/Warehouse/Warehouse/insert_database';
	                    if(a == ""){
	                        alert("请填写仓库编号！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写仓库地点！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写仓库容量！");
	                        return false;}
	                    if(d == "") {
	                        alert("请填写粮食储备粮！");
	                        return false;}
	                    if(e == "") {
	                        alert("请填写标准/非标准！");
	                        return false;}
	                    if(f == ""){
	                        alert("请填写日期！");
	                        return false;}
	                    if(g == ""){
	                        alert("请填写仓管员！");
	                        return false;}
	                    var data={
	                    	warehouseid:a,
	                        site:b,
	                        capacity:c,
	                        storage:d,
	                        standard:e,
	                        date:f,
	                        admin:g,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>