<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>农田土壤信息</title></block>
<block name="content">
<script>
document.getElementById('zhongzhi').click();
</script>
    <script>
        function jump(){
            window.location="__APP__/Plant/Farmland/addsoil";
        }
    </script>
    <div>
        <div style="height: 50px">
            <span style="margin-top: 5px;font-size: 28px">种植管理平台</span>
        </div>
        <div style="background-color: #b1bab7;height: 30px">
            <span style="margin-top: 5px;float: left">主页&nbsp;>&nbsp;种植&nbsp;>&nbsp;农田管理&nbsp;>&nbsp;农田土壤信息</span>
        </div>
        <div  style="margin-top: 10px;">
            <form action="__APP__/Plant/Farmland/environment" method="get">
                <span style="font-size: 16px;float: left">土壤编号：</span>
                <span style="float: left;margin-left: 10px"><input name="soilid" type="text" placeholder="请输入要搜索的土壤编号" class="form-control"style="width: 200px;height: 30px"></span>
                <span><button type="submit" class="btn btn-primary btn-sm" style="float: left;margin-left: 10px;">查询</button></span>
                <span><button type="button" class="btn btn-success btn-sm" style="float: left;margin-left: 10px" onclick="jump()">添加</button></span>
            </form>
        </div>
        <div>
            <table  class="table table-striped table-bordered" style="margin-top: 50px;align:center;">
                <thead>
                <tr>
                    <th>土壤编号</th>
                    <th>土温</th>
                    <th>土湿</th>
                    <th>PH值</th>
                    <th>N含量</th>
                    <th>其他指标</th>
                    <th>日期</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                <volist name='data' id='vo'>
                    <tr>
                        <td><{$vo.soilid}></td>
                        <td><{$vo.soiltemp}>℃</td>
                        <td><{$vo.soilhumidity}></td>
                        <td><{$vo.PH}></td>
                        <td><{$vo.N}></td>
                        <td><{$vo.others}></td>
                        <td><{$vo.date}></td>
                        <td><a href="__APP__/Plant/Farmland/modifysoil/id/<{$vo.id}>">修改</a>|
                            <a href="__APP__/Plant/Farmland/deletesoil/id/<{$vo.id}>" onclick="return confirm('是否删除？')">删除</a>
                        </td>
                    </tr>
                </volist>
                </tbody>
            </table>
        </div>
        <div align="center"><{$page}></div>
    </div>
</block>