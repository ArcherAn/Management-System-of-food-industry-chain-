<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>人员信息修改</title></block>
<block name="content">
        <div style="margin-top:1%">
            <form action="__APP__/Warehouse/Warehouse/update" method="post">
                <table class="table table-bordered" style="border: 1px solid red">
                    <tr style="height:45px">
                        <td colspan="5" align="center" bgcolor="#E9E9E9">仓储人员信息修改</td>
                    </tr>
                    <tr style="height:45px">
                        <td style="width: 150px;background-color:#E9E9E9">仓库编号</td>
                        <td ><input class="form-control" placeholder="如：1" style="width: 250px;height: 30px" type="text" name='warehouseid'  value="<{$data.warehouseid}>"/></td>
                    </tr>
                    <tr style="height:45px">
                        <td style="background-color:#E9E9E9">仓库地点</td>
                        <td><input class="form-control" placeholder="如：4厂" style="width: 250px;height: 30px" type="text" name='site'value="<{$data.site}>"/></td>
                    </tr>
                    <tr style="height:45px">
                        <td style="background-color:#E9E9E9">仓库容量</td>
                        <td><input class="form-control" placeholder="如：1000" style="width: 250px;height: 30px" type="text" name='capacity'  value="<{$data.capacity}>"/></td>
                    </tr>
                    <tr style="height:45px">
                        <td style="background-color:#E9E9E9">粮食储存量</td>
                        <td><input class="form-control" placeholder="如：700" style="width: 250px;height: 30px" type="text" name='storage'  value="<{$data.storage}>"/></td>
                    </tr>
                    <tr style="height:45px">
                        <td style="background-color: #E9E9E9">标准/非标准</td>
                        <td><input class="form-control" placeholder="如：标仓" style="width: 250px;height: 30px" type="text" name='standard'  value="<{$data.standard}>"/></td>
                    </tr>
                    <tr style="height:45px">
                        <td style="background-color: #E9E9E9">日期</td>
                        <td><input class="form-control" placeholder="如：2015-03-18" style="width: 250px;height: 30px" type="text" name='date'  value="<{$data.date}>"/></td>
                    </tr>
                    <tr style="height:45px">
                        <td style="background-color: #E9E9E9">仓管员</td>
                        <td><input class="form-control" placeholder="如：张三" style="width: 250px;height: 30px" type="text" name='admin'  value="<{$data.admin}>"/></td>
                    </tr>

                    <tr style="height:45px">
                        <td style="background-color:#E9E9E9"></td>
                        <td><input type='hidden' name='id' value="<{$data.id}>"/><input class="btn btn-primary" type="submit" value="确认修改" onclick="return confirm('是否确认？')"/></td>
                    </tr>
                </table>
            </form>
        </div>
    </block>
