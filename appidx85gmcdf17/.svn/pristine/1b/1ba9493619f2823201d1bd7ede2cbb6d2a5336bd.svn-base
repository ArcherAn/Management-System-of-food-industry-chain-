<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>外包信息添加（深加工）</title></block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>添加外包信息记录</caption>
            	</thead>
            	<tbody>
	                <tr>
	                    <td id="atr">批次</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：1" id="batchid" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">总重</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：180kg" id="weight" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">质检</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：合格" id="quality" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">质检员</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：张三" id="operator" type="text"/>
	                    </td>
	                </tr>
	                <tr>
	                    <td id="atr">日期</td>
	                    <td id="input">
	                    	<input class="form-control" placeholder="如：2014-02-02" id="date" type="text"/>
	                    </td>
	                </tr>
            	</tbody>
            	<tfoot>
	      			<tr>
	                    <td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#batchid').val();
	                    var b=$('#weight').val();
	                    var c=$('#quality').val();
	                    var d=$('#operator').val();
	                    var e=$('#date').val();
	                    var url='__APP__/Deepprocess/Outer/insert_database_pkg';
	                    if(a == ""){
	                        alert("请填写批次！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写总重！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写质检！");
	                        return false;}
	                    if(d == "") {
	                        alert("请填写质检员！");
	                        return false;}
	                    if(e == ""){
	                        alert("请填写日期！");
	                        return false;}
	                    var data={
	                    	batchid:a,
	                    	weight:b,
	                    	quality:c,
	                    	operator:d,
	                    	date:e,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>