<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title">
	<title>出产产品信息添加</title>
</block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>出产产品信息添加</caption>
            	</thead>
            	<tbody>
				    <tr>
                        <td id="atr">进料编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：1" type="text" id='feedid' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">大米编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：1" type="text" id='riceid' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">细米编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：1" type="text" id='finericeid' />
                        </td>
                    </tr>
				    <tr>
                        <td id="atr">米糠编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：1" type="text" id='ricebranid' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">谷壳编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：1" type="text" id='chaffid' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">能耗</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='consumption' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">操作员</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：张三" type="text" id='operator' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">日期</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：20110101" type="text" id='date' onClick="WdatePicker()"/>
                        </td>
                    </tr>

            	</tbody>
            	<tfoot>
	                <tr>
	                	<td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#feedid').val();
	                    var b=$('#riceid').val();
	                    var c=$('#finericeid').val();
	                    var d=$('#ricebranid').val();
	                    var e=$('#chaffid').val();
	                    var f=$('#consumption').val();
						var g=$('#operator').val();
						var h=$('#date').val();
	                    var url='__APP__/Process/Produce/insert_database_product';
	                    if(a == ""){
	                        alert("请填写进料编号！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写大米编号！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写细米编号！");
	                        return false;}
	                    if(d == "") {
	                        alert("请填写米糠编号！");
	                        return false;}
	                    if(e == "") {
	                        alert("请填写谷壳编号！");
	                        return false;}
	                    if(f == ""){
	                        alert("请填写能耗！");
	                        return false;}
						if(g == ""){
	                        alert("请填写操作员！");
	                        return false;}
						if(h == ""){
	                        alert("请填写日期！");
	                        return false;}
	                    var data={
	                        feedid:a,
	                        riceid:b,
	                        finericeid:c,
	                        ricebranid:d,
	                        chaffid:e,
	                        consumption:f,
							operator:g,
							date:h,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>