<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title">
	<title>出产细米信息添加</title>
</block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>出产细米信息添加</caption>
            	</thead>
            	<tbody>
                    <tr>
                        <td id="atr">细米编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：20080101" type="text" id='finericeid' />
                        </td>
                    </tr>
				 <tr>
                        <td id="atr">重量</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：50kg" type="text" id='weight' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">流向</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：一号仓库" type="text" id='whereabouts' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">用途</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**使用" type="text" id='Use' />
                        </td>
                    </tr>

            	</tbody>
            	<tfoot>
	                <tr>
	                	<td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#finericeid').val();
	                    var b=$('#weight').val();
	                    var c=$('#whereabouts').val();
	                    var d=$('#Use').val();
	                    var url='__APP__/Process/Produce/insert_database_finerice';
	                    if(a == ""){
	                        alert("请填写细米编号！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写重量！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写流向！");
	                        return false;}
	                    if(d == ""){
	                        alert("请填写用途！");
	                        return false;}
	                    var data={
	                        finericeid:a,
	                        weight:b,
	                        whereabouts:c,
	                        Use:d,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>