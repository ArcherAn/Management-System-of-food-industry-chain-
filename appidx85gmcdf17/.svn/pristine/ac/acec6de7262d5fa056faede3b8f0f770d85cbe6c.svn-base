<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title">
	<title>成品整理工序信息添加</title>
</block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>成品整理信息添加</caption>
            	</thead>
            	<tbody>
                    <tr>
                        <td id="atr">成品整理编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：20080101" type="text" id='sortoutid' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">指标1</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如**" type="text" id='index1' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">指标2</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='index2' />
                        </td>
                    </tr>
				 <tr>
                        <td id="atr">指标3</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='index3' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">指标4</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：35" type="text" id='index4' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">日期</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='date' />
                        </td>
                    </tr>

            	</tbody>
            	<tfoot>
	                <tr>
	                	<td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#sortoutid').val();
	                    var b=$('#index1').val();
	                    var c=$('#index2').val();
	                    var d=$('#index3').val();
	                    var e=$('#index4').val();
	                    var f=$('#date').val();
	                    var url='__APP__/Process/Process/insert_database_sortout';
	                    if(a == ""){
	                        alert("请填写成品整理编号！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写指标1！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写指标2！");
	                        return false;}
	                    if(d == "") {
	                        alert("请填写指标3！");
	                        return false;}
	                    if(e == "") {
	                        alert("请填写指标4！");
	                        return false;}
	                    if(f == ""){
	                        alert("请填写日期！");
	                        return false;}
	                    var data={
	                        sortoutid:a,
	                        index1:b,
	                        index2:c,
	                        index3:d,
	                        index4:e,
	                        date:f,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>