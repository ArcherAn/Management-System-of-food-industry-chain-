<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>设备信息修改（深加工）</title></block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
<block name="content">
        <div class="table-responsive">
            <form action="__APP__/Deepprocess/Equip/update" method="post">
                <table class="table table-striped table-bordered table-hover">
                	<thead>
            			<caption>加工设备信息修改</caption>
            		</thead>
            		<tbody>
		                <tr>
		                    <td id="atr">机器编号</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：20080101" id="machineid" type="text" name='machineid' value="<{$data.machineid}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">类型</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：收割机" id="type" type="text" name='type' value="<{$data.type}>" />
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">型号</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：ZX304" id="model" type="text" name='model' value="<{$data.model}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">生产线</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：一号线" id="line" type="text" name='line' value="<{$data.line}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">购买日期</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：20080101" id="date" type="text" name='date' value="<{$data.date}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">所属车间</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：原料加工" id="workshop" type="text" name='workshop' value="<{$data.workshop}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">效率</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：" id="efficiency" type="text" name='efficiency' value="<{$data.efficiency}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">状态</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：正常" id="state" type="text" name='state' value="<{$data.state}>"/>
		                    </td>
		                </tr>
            		</tbody>
            		<tfoot>
	                    <tr>
	                        <td id="atr"></td>
	                        <td id="input"><input type='hidden' name='id' value="<{$data.id}>"/><input class="btn btn-primary" type="submit" value="确认修改" onclick="return confirm('是否确认？')"/></td>
	                    </tr>
            		</tfoot>
                </table>
            </form>
        </div>
    </block>