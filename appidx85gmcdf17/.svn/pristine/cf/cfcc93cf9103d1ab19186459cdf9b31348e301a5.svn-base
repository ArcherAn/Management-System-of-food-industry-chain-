<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title">
	<title>大米加工设备参数添加</title>
</block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
    <block name="content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            	<thead>
            		<caption>大米加工设备参数添加</caption>
            	</thead>
            	<tbody>
                    <tr>
                        <td id="atr">机器编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：20080101" type="text" id='machineid' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">进料编号</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如**" type="text" id='feedid' />
                        </td>
                    </tr>
                    <tr>
                        <td id="atr">参数1</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='parameters1' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">参数2</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='Parameters2' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">参数3</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='Parameters3' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">参数4</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='Parameters4' />
                        </td>
                    </tr>
					<tr>
                        <td id="atr">参数5</td>
                        <td id="input">
                        	<input class="form-control" placeholder="如：**" type="text" id='Parameters5' />
                        </td>
                    </tr>
		      </tbody>
            	<tfoot>
	                <tr>
	                	<td id="atr"></td>
	                    <td id="input">
	                    	<input class="btn btn-primary" id="apply" type="submit" value="确认添加" />
	                    </td>
	                </tr>
            	</tfoot>
            </table>
        </div>
        <script>
        $(function() {
                $("#apply").click(function(){
                	if(confirm('确认添加？')){
	                    var a=$('#machineid').val();
	                    var b=$('#feedid').val();
	                    var c=$('#parameters1').val();
	                    var d=$('#Parameters2').val();
	                    var e=$('#Parameters3').val();
	                    var f=$('#Parameters4').val();
						var g=$('#Parameters5').val();
	                    var url='__APP__/Process/Process/insert_database';
	                    if(a == ""){
	                        alert("请填写机器编号！");
	                        return false;}
	                    if(b == "") {
	                        alert("请填写进料编号！");
	                        return false;}
	                    if(c == "") {
	                        alert("请填写参数1！");
	                        return false;}
	                    if(d == "") {
	                        alert("请填写参数2！");
	                        return false;}
	                    if(e == "") {
	                        alert("请填写参数3！");
	                        return false;}
	                    if(f == ""){
	                        alert("请填写参数4！");
	                        return false;}
						if(g == ""){
	                        alert("请填写参数5！");
	                        return false;}
	                    var data={
	                        machineid:a,
	                        feedid:b,
	                        parameters1:c,
	                        Parameters2:d,
	                        Parameters3:e,
	                        Parameters4:f,
							Parameters5:g,
	                        hidden:$('#hash').val()
	                    };
	                    $(this).attr("disabled",true);
	                    $(this).val("数据处理中.....");
	                    $.post(url,data,function(data){
	                        alert(data.info);
	                        window.location.href=data.url;
	                    });
	                    $(this).val("数据处理成功.....");
	                    return true;
                	}
                });
            });
        </script>
    </block>