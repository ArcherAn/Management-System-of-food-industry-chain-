<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>角色信息修改</title></block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
<block name="content">
        <div class="table-responsive">
            <form action="__APP__/User/Role/update" method="post">
                <table class="table table-striped table-bordered table-hover">
                	<thead>
            			<caption>角色信息</caption>
            		</thead>
            		<tbody>
		                <tr>
		                    <td id="atr">角色名称</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：经理" id="role_name" type="text" name='role_name' value="<{$data.role_name}>"/>
		                    </td>
		                </tr>
            		</tbody>
            		<tfoot>
	                    <tr>
	                        <td id="atr"></td>
	                        <td id="input"><input type='hidden' name='id' value="<{$data.id}>"/><input class="btn btn-primary" type="submit" value="确认修改" onclick="return confirm('是否确认？')"/></td>
	                    </tr>
            		</tfoot>
                </table>
            </form>
        </div>
    </block>