<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>糕点原料信息修改（深加工）</title></block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
<block name="content">
        <div class="table-responsive">
            <form action="__APP__/Deepprocess/Material/updateMat" method="post">
                <table class="table table-striped table-bordered table-hover">
                	<thead>
            			<caption>修改糕点原料信息</caption>
            		</thead>
            		<tbody>
		                <tr>
		                    <td id="atr">原料种类</td>
		                    <td id="input">
		                    	<input class="form-control" id="materialtype" type="text" name='materialtype' value="<{$data.materialtype}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">来源</td>
		                    <td id="input">
		                    	<input class="form-control" id="source" type="text" name='source' value="<{$data.source}>" />
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">重量</td>
		                    <td id="input">
		                    	<input class="form-control" id="weigh" type="text" name='weigh' value="<{$data.weigh}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">批次</td>
		                    <td id="input">
		                    	<input class="form-control" id="batch" type="text" name='batch' value="<{$data.batch}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">采购员</td>
		                    <td id="input">
		                    	<input class="form-control" id="operator" type="text" name='operator' value="<{$data.operator}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">日期</td>
		                    <td id="input">
		                    	<input class="form-control" id="date" type="text" name='date' value="<{$data.date}>" onClick="WdatePicker()"/>
		                    </td>
		                </tr>
            		</tbody>
            		<tfoot>
	                    <tr>
	                        <td id="atr"></td>
	                        <td id="input"><input type='hidden' name='id' value="<{$data.id}>"/><input class="btn btn-primary" type="submit" value="确认修改" onclick="return confirm('是否确认？')"/></td>
	                    </tr>
            		</tfoot>
                </table>
            </form>
        </div>
    </block>