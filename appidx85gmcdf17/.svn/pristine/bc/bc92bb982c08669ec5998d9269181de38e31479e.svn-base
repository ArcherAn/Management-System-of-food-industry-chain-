<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>车间设备工艺参数修改（深加工）</title></block>
<block name="diyStyle">
	<style>
		td#atr{width:10%;text-align:center;}
		td#input{width:50%;}
		div.table-responsive{margin-left:5%;margin-top:1%;}
		caption {text-align:center;background-color:#E9E9E9;}
	</style>
</block>
<block name="content">
        <div class="table-responsive">
            <form action="__APP__/Deepprocess/Workshop/updateParam" method="post">
                <table class="table table-striped table-bordered table-hover">
                	<thead>
            			<caption>修改车间设备工艺参数</caption>
            		</thead>
            		<tbody>
		                <tr>
		                    <td id="atr">车间编号</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：20080101" id="workshopid" type="text" name='workshopid' value="<{$data.workshopid}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">机器编号</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：1" id="machineid" type="text" name='machineid' value="<{$data.machineid}>" />
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">参数1</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：1" id="parameter1" type="text" name='parameter1' value="<{$data.parameter1}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">参数2</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：1" id="parameter2" type="text" name='parameter2' value="<{$data.parameter2}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">参数3</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：1" id="parameter3" type="text" name='parameter3' value="<{$data.parameter3}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">参数4</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：1" id="parameter4" type="text" name='parameter4' value="<{$data.parameter4}>"/>
		                    </td>
		                </tr>
		                <tr>
		                    <td id="atr">日期</td>
		                    <td id="input">
		                    	<input class="form-control" placeholder="如：2014-02-20" id="date" type="text" name='date' value="<{$data.date}>"/>
		                    </td>
		                </tr>
            		</tbody>
            		<tfoot>
	                    <tr>
	                        <td id="atr"></td>
	                        <td id="input"><input type='hidden' name='id' value="<{$data.id}>"/><input class="btn btn-primary" type="submit" value="确认修改" onclick="return confirm('是否确认？')"/></td>
	                    </tr>
            		</tfoot>
                </table>
            </form>
        </div>
    </block>