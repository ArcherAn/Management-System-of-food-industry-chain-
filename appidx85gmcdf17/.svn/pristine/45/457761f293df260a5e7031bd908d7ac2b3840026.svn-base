<extend name="Myapp/Tpl/Public/model.html"/>
<block name="title"><title>除虫操作信息修改</title></block>
<block name="content">
    <div style="margin-top:1%">
        <form action="__APP__/Plant/Planting/updatepest" method="post">
            <table class="table table-bordered" style="border: 1px solid red">
                <tr style="height:45px">
                    <td colspan="5" align="center" bgcolor="#E9E9E9">除虫操作信息修改</td>
                </tr>
                <tr style="height:45px">
                    <td style="background-color:#E9E9E9">农田编号</td>
                    <td><input class="form-control"  style="width: 250px;height: 30px" type="text" name='farmlandid' value="<{$data.farmlandid}>"/></td>
                </tr>
                <tr style="height:45px">
                    <td style="background-color:#E9E9E9">药品编号</td>
                    <td><input class="form-control"  style="width: 250px;height: 30px" type="text" name='drugid' value="<{$data.drugid}>"/></td>
                </tr>
                <tr style="height:45px">
                    <td style="background-color:#E9E9E9">用量</td>
                    <td><input class="form-control"  style="width: 250px;height: 30px" type="text" name='amount' value="<{$data.amount}>"/></td>
                </tr>
                <tr style="height:45px">
                    <td style="background-color:#E9E9E9">作用</td>
                    <td><input class="form-control"  style="width: 250px;height: 30px" type="text" name='action' value="<{$data.action}>"/></td>
                </tr>
                <tr style="height:45px">
                    <td style="background-color:#E9E9E9">操作员</td>
                    <td><input class="form-control" style="width: 250px;height: 30px" type="text" name='operator'  value="<{$data.operator}>"/></td>
                </tr>
                <tr style="height:45px">
                    <td style="background-color:#E9E9E9">日期</td>
                    <td><input class="form-control"  style="width: 250px;height: 30px" type="text" name='date'  value="<{$data.date}>"/></td>
                </tr>
                <tr style="height:45px">
                    <td style="background-color:#E9E9E9"></td>
                    <td><input type='hidden' name='id' value="<{$data.id}>"/><input class="btn btn-primary" type="submit" value="确认修改" onclick="return confirm('是否确认？')"/></td>
                </tr>
            </table>
        </form>
    </div>
    <script type="text/javascript">
        $('.form_date').datetimepicker({
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
    </script>
</block>
